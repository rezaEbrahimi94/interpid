<main class="container" id="app">
    <h2>Book Catalogue</h2>
    <div>
        <label for="rating">Filter by Rating:</label>
        <select id="rating" v-model="selectedRating">
            <option value="all">All</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <table class="table table--bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th class="mobile-hidden">Author</th>
                <th class="mobile-hidden">Category</th>
                <th>Year</th>
                <th class="mobile-hidden">Rating</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(book, index) in filteredBooks" :key="index" :class="{'highlighted': book.year >= 1950}">
                <td>{{ book.title }}</td>
                <td class="mobile-hidden">{{ book.author }}</td>
                <td class="mobile-hidden">{{ book.category }}</td>
                <td>{{ book.year }}</td>
                <td class="mobile-hidden">{{ book.rating }}</td>   
            </tr>
        </tbody>
    </table>
</main>